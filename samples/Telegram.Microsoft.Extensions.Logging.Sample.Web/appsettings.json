{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Telegram": {
      "BotToken": "xxxx",
      "ChatId": 0,
      "TimeStampFormat": "yyyy-MM-dd HH:mm:ss.fff \"GMT\"zzz",
      "LogFormat": "{LogLevel} \nWhen: {DateTime} \nEventId:{EventId} \nName: {Name} \nState: {State}",
      "LogErrorFormat": "***{LogLevel} \nWhen: {DateTime} \nEventId:{EventId} \nName: {Name} \nState: {State} \nException: {Exception}***",
      "Async": true,
      "LogToStandardErrorThreshold": "Error",
      "LogErrorChatId": 0

    }
  },
  "AllowedHosts": "*"
}
